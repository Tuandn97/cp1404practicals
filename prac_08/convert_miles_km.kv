BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text:'1'
            font_size:48
            multiline: False
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'up'
                on_press: app.handle_change_value(1)
            Button:
                text: 'down'
                on_press: app.handle_change_value(-1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert()
    Label:
        id: output_label
        text: '1.60934'
        font_size: 48
        color: (1, 1, 0, 1)